@{
    ViewBag.Title = "Employee Information";
}
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/AngularCode.js"></script>
<style>
    .btn-space {
        margin-left: -5%;
        background-color: cornflowerblue;
        font-size: large;
    }
</style>

<div ng-app="myApp">
    <div ng-controller="myCtrl" ng-init="GetAllData()" class="divList">
        <div class="form-horizontal" role="form">
            <div class="container">
                <div id="msg">
                </div>
                <div class="row">
                    <h2>
                        <span id="spn">Employee Information</span>
                    </h2>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">Name:</label>
                            <input type="text" class="form-control" id="inputEmail" placeholder="Name" ng-model="EmpName">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">City:</label>
                            <input type="text" class="form-control" id="inputPassword" placeholder="City" ng-model="EmpCity">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="control-label">Age:</label>
                            <input type="number" class="form-control" id="inputLabel3" placeholder="Age" ng-model="EmpAge">
                        </div>
                    </div>
                    <div class="col-sm-1">
                        <br />
                        <input type="button" id="btnSave" class="btn btn-success" value="Submit" ng-click="InsertData()" />
                    </div>
                </div>
            </div>
        </div>

        <p class="divHead">List of Employee</p>

        <table cellpadding="12" class="table table-bordered table-hover">
            <tr>
                <td style="display:none">
                    <b>ID</b>
                </td>
                <td style="width:40%">
                    <b>Name</b>
                </td>
                <td style="width:30%">
                    <b>City</b>
                </td>
                <td style="width:10%">
                    <b>Age</b>
                </td>
                <td style="width:13%">
                    <b>Actions</b>
                </td>
            </tr>
            <tr ng-repeat="Emp in employees">
                <td style="display:none">
                    {{Emp.Emp_Id}}
                </td>
                <td>
                    {{Emp.Emp_Name}}
                </td>
                <td>
                    {{Emp.Emp_City}}
                </td>
                <td>
                    {{Emp.Emp_Age}}
                </td>
                <td>
                    <input type="button" class="btn btn-warning" value="Update" ng-click="UpdateEmp(Emp)" />
                    <input type="button" class="btn btn-danger" value="Delete" ng-click="DeleteEmp(Emp)" />
                </td>
            </tr>
        </table>


    </div>
    @Html.Hidden("EmpID_")

</div>  